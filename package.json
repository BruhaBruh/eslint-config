{
  "name": "@bruhabruh/eslint-config",
  "version": "1.0.1",
  "description": "BruhaBruh ESLint Config for projects",
  "author": "BruhaBruh",
  "license": "MIT",
  "keywords": [
    "eslint",
    "config"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/bruhabruh/eslint-config"
  },
  "main": "index.js",
  "files": [
    "a11y.js",
    "base.js",
    "client.js",
    "react.js",
    "server.js",
    "prettier.js",
    "constants.js",
    "import-order.js"
  ],
  "scripts": {
    "lint": "pnpm run lint:js && pnpm run lint:other",
    "lint:js": "eslint . --report-unused-disable-directives",
    "lint:other": "prettier --check '**/*.{md,yaml,yml,json}'",
    "prettier": "prettier '**/*.{md,yaml,yml,json}'",
    "prepare": "husky"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-security": "^1.7.1"
  },
  "devDependencies": {
    "@bruhabruh/eslint-config": "^1.0.0",
    "@bruhabruh/prettier-config": "^1.1.1",
    "@bruhabruh/tsconfig": "^1.0.1",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "eslint": "^8.57.1",
    "husky": "^9.1.6",
    "nano-staged": "^0.8.0",
    "prettier": "^3.3.3"
  },
  "peerDependencies": {
    "eslint": "^8.57.1",
    "prettier": "*"
  },
  "peerDependenciesMeta": {
    "prettier": {
      "optional": true
    }
  },
  "nano-staged": {
    "*.{js,ts}": [
      "eslint --fix --quiet --report-unused-disable-directives"
    ],
    "*.{md,yaml,yml,json}": [
      "prettier --write"
    ]
  }
}
