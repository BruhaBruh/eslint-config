{
  "name": "@bruhabruh/eslint-config",
  "version": "1.2.8",
  "description": "BruhaBruh ESLint Config for projects",
  "author": "BruhaBruh",
  "license": "MIT",
  "type": "module",
  "keywords": [
    "eslint",
    "config"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/bruhabruh/eslint-config"
  },
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "config",
    "index.d.ts"
  ],
  "scripts": {
    "lint": "pnpm run lint:js && pnpm run lint:other",
    "lint:js": "eslint . --report-unused-disable-directives",
    "lint:other": "prettier --check '**/*.{md,yaml,yml,json}'",
    "prettier": "prettier '**/*.{md,yaml,yml,json}'",
    "prepare": "husky"
  },
  "dependencies": {
    "@eslint/compat": "^1.2.4",
    "@eslint/js": "^9.17.0",
    "@eslint/json": "^0.9.0",
    "@eslint/markdown": "^6.2.1",
    "@stylistic/eslint-plugin-js": "^2.12.1",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsdoc": "^50.6.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-n": "^17.15.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-tailwindcss": "^3.17.5",
    "prettier": "^3.4.2",
    "typescript-eslint": "^8.19.0"
  },
  "devDependencies": {
    "@bruhabruh/prettier-config": "^1.1.3",
    "@bruhabruh/tsconfig": "^1.0.2",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "nano-staged": "^0.8.0"
  },
  "peerDependenciesMeta": {
    "prettier": {
      "optional": true
    }
  },
  "overrides": {
    "eslint": "^9.11.1"
  },
  "nano-staged": {
    "*.{js,ts}": [
      "eslint --fix --quiet --report-unused-disable-directives"
    ],
    "*.{md,yaml,yml,json}": [
      "prettier --write"
    ]
  }
}
